<UserControl x:Class="Grudy.terminalCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Grudy"
             xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="189.733" d:DesignWidth="403.2">
    <Grid Background="#3F000000">
        <RichTextBox x:Name="term" FontFamily="Cascadia Mono" FontSize="14" Background="#0C000000" Foreground="#FFC9E9C9" VerticalScrollBarVisibility="Visible" PreviewKeyDown="term_PreviewKeyDown" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Padding="5,2,0,0" AcceptsReturn="False" PreviewMouseRightButtonDown="term_PreviewMouseRightButtonDown" PreviewMouseDown="term_MouseDown" ContextMenu="{x:Null}">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Terminal"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <!--<TextBox x:Name="term" TextWrapping="Wrap" Text="TextBox" FontFamily="Consolas" FontSize="14" Background="#0C000000" Foreground="#FF7EE07E" VerticalScrollBarVisibility="Visible" PreviewKeyDown="term_PreviewKeyDown" Margin="0,29,0,16" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Padding="5,2,0,0"/>-->
    </Grid>
</UserControl>
